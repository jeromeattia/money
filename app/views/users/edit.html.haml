.row
  .small-6.offset-1.columns  
    %h3 
      Préférences de l'utilisateur
    = form_for(@user) do |f|
      = render 'shared/error_messages', :object => f.object
      .field
        = f.label "Nom"
        = f.text_field :name
      .field
        = f.label :email
        = f.text_field :email
      .field
        = f.label "Mot de passe"
        = f.password_field :password
      .field
        = f.label :password_confirmation, "Confirmation"
        = f.password_field :password_confirmation
      .actions
        = f.submit "Mettre à jour", class: 'button'
    %div
      = gravatar_for @user
      %a{href: "http://gravatar.com/emails"} Changer d'avatar